<% content_for :sidebar do %>
<%= render :partial => "shared/database_sidebar" %>
<% end %>


<%= render :partial => "shared/collections_breadcrumbs" %>

<small><%= link_to "New Database", "#", id: 'create-coll', class: "btn pull-right"  %></small>
<div id="create-modal" class="modal hide fade">
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="text-center">Create a new Database?</h3>
  </div>
  <div class="modal-footer">

    <%= form_tag(explorer_index_path(), :method=> :post, :id => 'addcollfrm') do %>
      <div id ='Errors'></div>
      <fieldset>
        <%=text_field_tag 'db' , '', :placeholder => 'Database name...', :class => 'dbtxt pull-left' %> 
        <button aria-hidden="true" data-dismiss="modal" class="btn btn-danger">Cancel</button>
        <%= submit_tag 'Save Database', :class => 'btn btn-primary db_submit'%>
      </fieldset>
    <% end %>
  </div>